<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <!-- This requires the presence of the 'menu' package to work -->
  <item label="Terminal">
    <action name="Execute"><execute>/usr/bin/urxvt -l -e /bin/bash</execute></action>
  </item>
  <item label="PyCharm 2018">
    <action name="Execute"><execute>/opt/pycharm/bin/pycharm.sh</execute></action>
  </item>
  <item label="BornAgain GUI">
    <action name="Execute"><execute>/bin/bash -c "/opt/bornagain/bin/bornagain"</execute></action>
  </item>
  <separator />
  <menu id="screen-res-menu" label="Screen size">
    <item label="800x600">
      <action name="Execute"><execute>/usr/bin/xrandr -s 800x600</execute></action>
    </item>
    <item label="1024x768">
      <action name="Execute"><execute>/usr/bin/xrandr -s 1024x768</execute></action>
    </item>
    <item label="1600x1200">
      <action name="Execute"><execute>/usr/bin/xrandr -s 1600x1200</execute></action>
    </item>
    <item label="1920x1080">
      <action name="Execute"><execute>/usr/bin/xrandr -s 1920x1080</execute></action>
    </item>
    <item label="2560x1440">
      <action name="Execute"><execute>/usr/bin/xrandr -s 2560x1440</execute></action>
    </item>
  </menu>
  <menu id="client-list-menu" />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
